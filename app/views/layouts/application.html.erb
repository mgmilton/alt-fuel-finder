<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>AltFuelFinder</title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <button class="navbar-toggle" data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" type="button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "AltFuelFinder", root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <%= form_tag :search, method: :get, class: "form-inline" do %>
            <div class="form-group search-field">
              <%= text_field_tag :zip, "Search by zip...", class: "form-control" %>
              <%= hidden_field_tag :api_key, ENV['NREL_API_KEY'] %>
              <%= hidden_field_tag :fuel_type, "ELEC,LPG"%>
              <%= hidden_field_tag :distance, "6"%>
              <%= hidden_field_tag :longitude, "-105.0008636"%>
              <%= hidden_field_tag :latitude, "39.7320542"%>
              <%= hidden_field_tag :limit, "10"%>
              <%= submit_tag "Locate", class: "btn btn-primary" %>
            </div>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
